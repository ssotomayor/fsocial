doctype html
html(data-ng-app='FalconSocialApp')
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    link(rel="stylesheet" href="/stylesheets/animate.min.css")
    script(src='/javascripts/underscore-min.js')
    script(src='/javascripts/angular.min.js')
    script(src='/javascripts/angular-underscore-module.js')
    script(src='/javascripts/angular-ui-router.min.js')
    script(src='/javascripts/ocLazyLoad.min.js')
    script(src='http://code.jquery.com/jquery-1.11.2.min.js')
    script(src='/javascripts/socket.io-1.3.4.js')
    script(src='/javascripts/d3.min.js')
    script(src='/app/app.js')

    body(data-ng-controller='AppController')
      h1.lightblue(data-ng-bind="'Falcon Social' + $state.current.data.pageTitle")
      block content

    script(type='text/javascript').
        $li = $('li');
        $a = $('a');
        $a.on('click', function(e){
            e.preventDefault();
            $li.removeClass('current');
            $(this).parent().addClass('current');
        });

        var socket = io();